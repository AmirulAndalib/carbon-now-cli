{
	"preset": "ts-jest",
	"extensionsToTreatAsEsm": [".ts"],
	"testEnvironment": "node",
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"modulePathIgnorePatterns": ["<rootDir>/test-deprecated/", "<rootDir>/dist/"],
	"transformIgnorePatterns": [
		"<rootDir>/node_modules/(?!get-stdin|clipboardy)"
	],
	"transform": {
		"^.+\\.[tj]s$": [
			"ts-jest",
			{
				"useESM": true
			}
		]
	}
}
