{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "*": ["./types/cli/*.d.ts", "./types/carbon/*.d.ts"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
  },
  "exclude": ["node_modules", "./test/test-dummies/**.*"]
}
