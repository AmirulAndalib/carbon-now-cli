{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
			"*": ["./types/cli/*.d.ts", "./types/carbon/*.d.ts"]
		},
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
	"exclude": ["node_modules", "./test/test-dummies/**.*"],
}
